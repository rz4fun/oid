<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rz.remotesteer.DashActivity" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/speed_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <rz.remotesteer.VerticalSeekBar
            android:id="@+id/speed_seekbar"
            android:max="90"
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:progress="0"
            android:layout_alignBottom="@+id/steer_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/wheel_layout"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/steer_image"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/sw"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </FrameLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/control_layout">

        <ToggleButton
            android:id="@+id/power_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/power_button_toggle"
            android:text="ToggleButton"
            android:layout_alignTop="@+id/steer_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/drive_state_layout">

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"
                android:id="@+id/d_textview"
                android:layout_above="@+id/drive_reverse_switch"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:textColor="@color/green"
                android:layout_gravity="left"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R"
                android:id="@+id/r_textview"
                android:layout_above="@+id/drive_reverse_switch"
                android:layout_alignTop="@+id/d_textview"
                android:layout_alignRight="@+id/drive_reverse_switch"
                android:layout_alignEnd="@+id/drive_reverse_switch"
                android:layout_toEndOf="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drive_reverse_switch"
                android:checked="false"
                android:layout_above="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textOff="D"
                android:textOn="R"
                android:layout_column="2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status"
                android:layout_alignBottom="@+id/steer_image"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_column="2"
                android:layout_gravity="center_horizontal" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Speed"
                android:id="@+id/textView2"
                android:layout_above="@+id/speed_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="2"
                android:layout_gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/speed_textview"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/power_button"
                android:layout_alignEnd="@+id/power_button"
                android:layout_column="2"
                android:layout_gravity="center_horizontal" />
        </TableRow>

    </TableLayout>

</RelativeLayout>